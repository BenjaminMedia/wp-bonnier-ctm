{
    "name": "bonnier/wp-bonnier-ctm",
    "description": "This plugin allows you to integrate your site with Cthe Campaign Teaser Manager",
    "type": "wordpress-plugin",
    "require": {
        "guzzlehttp/guzzle": "^6.3",
        "illuminate/support": "^5.6"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Bonnier Publications",
            "email": "interactive@bonnier.dk"
        }
    ],
    "scripts": {
        "test": [
            "./vendor/bin/phpunit --bootstrap ./vendor/autoload.php --testdox ./tests/"
        ]
    },
    "autoload": {
        "psr-4": {
            "Bonnier\\WP\\CTM\\": "src/",
            "Tests\\Bonnier\\WP\\CTM\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "fzaninotto/faker": "^1.7"
    }
}
